<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarStyle="insideOverlay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/thanks"
            style="@style/Base.TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp"
            android:text="Thanks to the following:"/>

        <RelativeLayout
            android:id="@+id/thanks_holder"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <RelativeLayout
                android:id="@+id/about_senpai_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/bullet_senpai"
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="6dp"
                    android:text="@string/bullet"/>

                <TextView
                    android:id="@+id/about_senpai"
                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/bullet_senpai"
                    android:text="@string/about_senpai"/>

                <TextView
                    android:id="@+id/about_senpai_link"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/about_senpai"
                    android:layout_below="@id/about_senpai"
                    android:layout_marginTop="5dp"
                    android:autoLink="web"
                    android:text="@string/about_senpai_url"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/about_mal_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/about_senpai_holder"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/bullet_mal"
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="6dp"
                    android:text="@string/bullet"/>

                <TextView
                    android:id="@+id/about_mal"
                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/bullet_mal"
                    android:text="@string/about_mal"/>

                <TextView
                    android:id="@+id/about_mal_link"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/about_mal"
                    android:layout_below="@id/about_mal"
                    android:layout_marginTop="5dp"
                    android:autoLink="web"
                    android:text="@string/about_mal_url"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/about_hb_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/about_mal_holder"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/bullet_hb"
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="6dp"
                    android:text="@string/bullet"/>

                <TextView
                    android:id="@+id/about_hb"
                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/bullet_hb"
                    android:text="@string/about_hb"/>

                <TextView
                    android:id="@+id/about_hb_link"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/about_hb"
                    android:layout_below="@id/about_hb"
                    android:layout_marginTop="5dp"
                    android:autoLink="web"
                    android:text="@string/about_hb_url"/>
            </RelativeLayout>

        </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/version_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:text="test"/>

    </LinearLayout>

</ScrollView>

