<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="4dp"
    android:paddingStart="4dp">

    <android.support.v7.widget.CardView xmlns:android.support.v7.cardview="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android.support.v7.cardview:cardBackgroundColor="@android:color/white"
        android.support.v7.cardview:cardElevation="3dp"
        android.support.v7.cardview:cardUseCompatPadding="true"
        android.support.v7.cardview:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/changelog_version"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="6dp"
                android:text="Test title"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/changelog_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/changelog_version"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="7dp"
                android:layout_marginStart="7dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/changelog_new_title"
                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New" />

                <TextView
                    android:id="@+id/changelog_new_text"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingEnd="0dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="0dp"
                    android:paddingStart="10dp"
                    android:text="New" />

                <TextView
                    android:id="@+id/changelog_fixes_title"
                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fixes" />


                <TextView
                    android:id="@+id/changelog_fixes_text"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingEnd="0dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="0dp"
                    android:paddingStart="10dp"
                    android:text="New" />

            </LinearLayout>

            <ImageView
                android:id="@+id/changelog_new_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/changelog_version"
                android:layout_toRightOf="@+id/changelog_version"
                android:gravity="center_vertical"
                android:src="@drawable/ic_announcement"
                android:visibility="gone" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>