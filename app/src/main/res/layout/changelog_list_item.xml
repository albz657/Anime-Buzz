<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="4dp"
    android:paddingStart="4dp">

    <android.support.v7.widget.CardView xmlns:android.support.v7.cardview="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android.support.v7.cardview:cardBackgroundColor="@android:color/white"
        android.support.v7.cardview:cardElevation="3dp"
        android.support.v7.cardview:cardUseCompatPadding="true"
        android.support.v7.cardview:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/changelog_version"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="8dp"
                android:text="Test title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/changelog_text"
                style="@style/Base.TextAppearance.AppCompat.Subhead"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/changelog_version"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:text="content" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_announcement_black_48dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:visibility="gone"
                android:layout_marginLeft="8dp"
                android:id="@+id/changelog_new_icon"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/changelog_version"
                android:layout_toEndOf="@+id/changelog_version" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>