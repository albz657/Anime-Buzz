<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingEnd="4dp"
             android:paddingStart="4dp">

    <android.support.v7.widget.CardView xmlns:android.support.v7.cardview="http://schemas.android.com/apk/res-auto"
                                        android:id="@+id/card"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="0dp"
                                        android:layout_marginTop="0dp"
                                        android.support.v7.cardview:cardBackgroundColor="@android:color/white"
                                        android.support.v7.cardview:cardElevation="3dp"
                                        android.support.v7.cardview:cardUseCompatPadding="true"
                                        android.support.v7.cardview:contentPadding="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="0dp"
            android:paddingTop="0dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="0dp"
                android:layout_toLeftOf="@id/button_holder"
                android:layout_toRightOf="@id/series_poster"
                android:paddingBottom="4dp"
                android:paddingTop="4dp">

                <TextView
                    android:id="@+id/series_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:maxLines="2"
                    android:text="Test title"
                    android:textColor="#D9000000"
                    android:textSize="18dp"
                    android:textStyle="bold"/>


            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>